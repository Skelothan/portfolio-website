<p id="notice"><%= notice %></p>

<h2><%= @project.name %></h2>
<h5 class="dates">
  <%= @project.start_date.strftime("%B %Y") %> &ndash; 
  <% if @project.end_date.nil? %>
    present
  <% else %>
    <%= @project.end_date.strftime("%B %Y") %>
  <% end %>
</h5>
<hr>

<p>
  <%= @project.description %>
</p>

<% if @project.links.count > 0 %>
  <h5>Links</h5>
  <ul class="links">
    <% @project.links.each do |l| %>
      <li>
        <%= link_to l.url do %>
          <%= l.name %>
          <%= image_tag 'bootstrap-icons/box-arrow-up-right.svg', width: 16, height: 16, class: "external_link" %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if @project.file_projects.count > 0 %>
  <h5>Files</h5>
  <ul class="links">
    <% @project.uploaded_files.each do |f| %>
      <li>
        <%= link_to asset_path(f.url, type: :file) do %>
          <%= f.name %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<!-- asset_path(file.url, type: :file) -->

<br>
<%= if false then link_to 'Edit', edit_project_path(@project) end %>
<%= link_to 'Back', projects_path %>
