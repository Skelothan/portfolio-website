<%= render partial: "layouts/flash" %>

<h2>Uploaded Files</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Media type</th>
      <th>Upload date</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploaded_files.each do |uploaded_file| %>
      <tr>
        <td><%= uploaded_file.name %></td>
        <td><%= uploaded_file.url.split('?').first + "?[...]" %></td>
        <td><%= uploaded_file.media_type %></td>
        <td><%= uploaded_file.upload_date %></td>
        <td><%= uploaded_file.active %></td>
        <td><%= link_to 'Show', uploaded_file %></td>
        <td><%= link_to 'Edit', edit_uploaded_file_path(uploaded_file) %></td>
        <td><%= link_to 'Destroy', uploaded_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Uploaded File', new_uploaded_file_path %>
