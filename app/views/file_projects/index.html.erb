<%= render partial: "layouts/flash" %>

<h2>File Projects</h2>

<table>
  <thead>
    <tr>
      <th>File</th>
      <th>Project</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_projects.each do |file_project| %>
      <tr>
        <td><%= link_to file_project.uploaded_file.name, file_project.uploaded_file %></td>
        <td><%= link_to file_project.project.name, file_project.project %></td>
        <td><%= link_to 'Edit', edit_file_project_path(file_project) %></td>
        <td><%= link_to 'Destroy', file_project, class: "destroy", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New File Project', new_file_project_path %>
