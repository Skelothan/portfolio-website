<p id="notice"><%= notice %></p>

<h2><%= render partial: "bootstrap-icons/tag_fill" %> <%= @tag.name %></h2>
<h6>In category: <%= link_to @tag.category, tags_path %></h6>
<hr>

<% if not @tag.active %>
  <p>Note: This tag is currently not in use.</p>
<% end %>

<% if @tag.projects.size == 0 %>
  <p>There are currently no projects with this tag.</p>
<% else %>
  <h4>Projects with this tag:</h4>
  <ul class="projects-for-tag">
    <% @tag.projects.active.each do |p| %>
      <li><%= link_to p.name, project_path(p)%></li>
    <% end %>
  </ul>
<% end %>

<br>

<!-- TODO: authenticate, then allow editing -->
<% if can? :edit, Project %>
  <%= link_to 'Edit', edit_tag_path(@tag) %> | 
<% end %>
<%= link_to 'Back', tags_path %>
